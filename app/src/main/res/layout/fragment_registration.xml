<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.registration.view.RegistrationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marginGeral28"
            android:layout_marginTop="@dimen/marginGeral28"
            android:hint="@string/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marginGeral28"
            android:hint="Telefone:"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etName" />

        <EditText
            android:id="@+id/etCepUm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marginGeral28"
            android:hint="Cep"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etPhone" />
<Button
    android:id="@+id/btnSearch"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:text="Buscar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_margin="@dimen/marginGeral28"

    app:layout_constraintTop_toBottomOf="@id/etCepUm"/>
     <EditText
         android:id="@+id/etDistrict"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:text="Bairro:"
         android:layout_margin="@dimen/marginGeral28"
         android:inputType="text"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/btnSearch"/>
        <EditText
            android:id="@+id/etRoad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Rua:"
            android:layout_margin="@dimen/marginGeral28"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etDistrict"/>
        <EditText
            android:id="@+id/etState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Estado:"
            android:layout_margin="@dimen/marginGeral28"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etRoad"/>
        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cidade:"
            android:layout_margin="@dimen/marginGeral28"
            android:inputType="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etState"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>